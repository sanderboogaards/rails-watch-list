<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.5)), url(https://res.cloudinary.com/sanderboogaards/image/upload/v1629454328/pexels-donald-tong-109669_rgnlni.jpg); height: 300px;">
  <div class="container">
    <h1>Create a new list</h1>
  </div>
</div>

<div class="container">
  <%= simple_form_for(@list) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-group mt-5">
      <%= f.input :name %>
      <%= f.input :photo, as: :file %>
    </div>

    <div class="btn btn-flat">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
