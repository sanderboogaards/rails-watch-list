<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.5)), url(<%= cl_image_path @list.photo.key %>); height: 300px;">
  <div class="container">
    <h1> <%= @list.name %> </h1>
  </div>
</div>

<div class="container">

<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-flat" %>

<div class="cards">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-trip">
      <img src="<%= bookmark.movie.poster_url %>" alt="movie poster" style="object-fit: cover; object-position: top;" />
      <div class="card-trip-infos">
        <div>
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.comment %></p>
        </div>
        <p class="card-trip-pricing"><strong><%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %></strong></p>
      </div>
    </div>
  <% end %>
</div>
